# Environment Configuration Example
# Copy this file to .env and update values as needed.

# Application
ENVIRONMENT=development
# Set DEBUG=false in production; when true, error details may be exposed in API responses
DEBUG=false

# Database (config/settings.py uses DB_* variables)
DB_URL=postgresql://postgres:password@localhost:5433/image_rag_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Models (config/settings.py uses MODEL_* variables)
MODEL_TEXT_MODEL=all-MiniLM-L6-v2
MODEL_IMAGE_MODEL=openai/clip-vit-base-patch32
MODEL_CACHE_DIR=.model_cache
MODEL_DEVICE=auto

# CORS (config/settings.py uses CORS_ORIGINS on the root settings object)
CORS_ORIGINS=["*"]

# Cache (config/settings.py uses CACHE_* variables)
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# API (config/settings.py uses API_* variables)
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging (config/settings.py uses LOG_* variables)
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Optional: External API keys
# PEXELS_API_KEY=your_key_here